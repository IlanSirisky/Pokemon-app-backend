datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pokemon {
  id          Int             @id @default(autoincrement())
  name        String
  description String
  image       String
  profile     Profile?
  baseStats   BaseStats?
  Users       UsersPokemons[]
}

model Profile {
  pokemon_id Int      @unique
  height     String
  weight     String
  ability    String[]
  types      String[]
  Pokemon    Pokemon  @relation(fields: [pokemon_id], references: [id])

  @@index([pokemon_id])
}

model BaseStats {
  pokemon_id  Int     @unique
  hp          Int
  attack      Int
  defense     Int
  sp_attack   Int
  sp_defense  Int
  speed       Int
  power_level Int
  Pokemon     Pokemon @relation(fields: [pokemon_id], references: [id])

  @@index([pokemon_id])
}

model User {
  id       Int             @id @default(autoincrement())
  sub      String          @unique
  username String          @unique
  email    String          @unique
  Pokemons UsersPokemons[]
}

model UsersPokemons {
  user_id    Int
  pokemon_id Int
  User       User    @relation(fields: [user_id], references: [id])
  Pokemon    Pokemon @relation(fields: [pokemon_id], references: [id])

  @@id([user_id, pokemon_id])
  @@index([user_id])
  @@index([pokemon_id])
}
